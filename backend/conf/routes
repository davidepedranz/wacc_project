# ------------------------------------------------
#   Application Routes
# ------------------------------------------------

# login
POST          /v1/login                                          controllers.LoginController.login

# users APIs
GET           /v1/users/@me                                      controllers.UsersController.me
GET           /v1/users                                          controllers.UsersController.list
POST          /v1/users                                          controllers.UsersController.create
DELETE        /v1/users/:username                                controllers.UsersController.delete(username: String)
POST          /v1/users/:username/permissions/:permission        controllers.UsersController.addPermission(username: String, permission: String)
DELETE        /v1/users/:username/permissions/:permission        controllers.UsersController.removePermission(username: String, permission: String)

# events streaming (Websocket)
GET           /v1/events                                         controllers.EventsController.socket

# Docker Swarm APIs
GET           /containersAll                                     controllers.ComponentsController.getContainersAll
GET           /images                                            controllers.ComponentsController.getImages
POST          /containers/:id/stop                               controllers.ComponentsController.postContainerStop(id:String)
POST          /containers/:id/start                              controllers.ComponentsController.postContainerStart(id:String)
GET           /containers/:id                                    controllers.ComponentsController.getContainersInfo(id: String)
POST          /services/create                                   controllers.ComponentsController.createService
POST          /services/:id/update                               controllers.ComponentsController.updateService(id: String)
DELETE        /services/:id                                      controllers.ComponentsController.deleteService(id: String)
#GET           /services/:id                                      controllers.ComponentsController.getServiceInfo(id: String)
#GET           /services/:id/*command                             controllers.ComponentsController.cannotGet
GET           /v1/services                                       controllers.ComponentsController.list
#OPTIONS       /services/:id                                     controllers.ComponentsController.deleteService(id: String)
