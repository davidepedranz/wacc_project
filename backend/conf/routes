# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET       /                       controllers.HomeController.index

# Url of REST API
->         /v1/postsTest               v1.post.PostRouter

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /containers                    controllers.ComponentsController.getContainers

GET     /containersAll                 controllers.ComponentsController.getContainersAll

GET      /images                    controllers.ComponentsController.getImages

POST    /containers/:id/stop        controllers.ComponentsController.postContainerStop(id:String)

POST    /containers/:id/start        controllers.ComponentsController.postContainerStart(id:String)

GET      /containers/:id         controllers.ComponentsController.getContainersInfo(id : String)

#POST    /containers/create     controllers.ComponentsController.createContainer()